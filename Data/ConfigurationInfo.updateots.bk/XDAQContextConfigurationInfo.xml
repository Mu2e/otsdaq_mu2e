				<COLUMN Type="Data" 	 Name="Address" 	 StorageName="ADDRESS" 		DataType="VARCHAR2" 		DataChoices=""/>
				<COLUMN Type="Data" 	 Name="Port" 	 StorageName="PORT" 		DataType="NUMBER" 		DataChoices=""/>
        <COLUMN Type="Data" 	 Name="ARTDAQDataPort" 	 StorageName="ARTDAQ_DATA_PORT" 		DataType="NUMBER" 		DataChoices=""/>
